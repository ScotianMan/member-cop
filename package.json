{
  "name": "member-cop",
  "version": "1.0.0",
  "description": "An app to catch people making comments who are not repo members and comment with instructions",
  "author": "James Walsh <forjameswalsh@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/scotianman/typescript.git",
  "homepage": "https://github.com/scotianman/typescript",
  "bugs": "https://github.com/scotianman/typescript/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^10.0.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
